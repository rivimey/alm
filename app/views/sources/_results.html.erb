<div class="row">
  <div class="col-md-9">
    <% if Work.first && Source.active.any? %>
      <div class="panel panel-default">
        <div class="panel-heading panel-title">Works with results<small class="pull-right">linear scale</small></div>
        <div class="panel-body" id="work-body">
          <div class="text-muted" id="work-loading">Loading … <%= image_tag "spinner.gif" %></div>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading panel-title">Total number of results <small class="pull-right">logarithmic scale</small></div>
        <div class="panel-body" id="result-body">
          <div class="text-muted" id="result-loading">Loading … <%= image_tag "spinner.gif" %></div>
        </div>
      </div>
    <% else %>
      <div class="alert alert-info">No results found</div>
    <% end %>
  </div>
</div>

<%= javascript_include_tag 'sources/index' %>
